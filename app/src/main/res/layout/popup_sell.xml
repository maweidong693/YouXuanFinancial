<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_login">

    <TextView
        android:id="@+id/tv_sell_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_25"
        android:text="是否要卖出当前产品？"
        android:textColor="@color/alwaysTextColor"
        android:textSize="@dimen/dp_20" />

    <Button
        android:id="@+id/bt_cancel_sell"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/tv_sell_hint"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/bg_cancle"
        android:text="取消"
        android:layout_marginStart="@dimen/dp_17"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12" />

    <Button
        android:id="@+id/bt_confirm_sell"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/tv_sell_hint"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_17"
        android:background="@drawable/bg_confirm"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12" />

</RelativeLayout>