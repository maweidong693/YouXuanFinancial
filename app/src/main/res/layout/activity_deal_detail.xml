<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/acBgColor"
    tools:context=".main.mine.deal_detail.DealDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ab_deal_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        app:elevation="@dimen/dp_0">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/deal_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_30"
            android:minHeight="?attr/actionBarSize"
            android:navigationIcon="@mipmap/ic_back_black"
            app:navigationIcon="@mipmap/ic_back_black"
            tools:targetApi="lollipop">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="@string/dealDetail"
                android:textColor="@color/alwaysTextColor"
                android:textSize="@dimen/dp_19"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_check_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_below="@id/ab_deal_detail"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_calendar_1"
            android:layout_width="@dimen/dp_102"
            android:layout_height="@dimen/dp_31"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_calendar"
            android:gravity="center"
            android:text="@string/test"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="è‡³"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@+id/tv_calendar_1"
            app:layout_constraintStart_toEndOf="@+id/tv_calendar_1"
            app:layout_constraintTop_toTopOf="@+id/tv_calendar_1"
            app:layout_constraintVertical_bias="0.466" />

        <TextView
            android:id="@+id/tv_calendar_2"
            android:layout_width="@dimen/dp_102"
            android:layout_height="@dimen/dp_31"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_calendar"
            android:gravity="center"
            android:text="@string/test"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <Button
            android:id="@+id/bt_confirm_time"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_31"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_calendar_confir"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_below="@id/cl_check_time"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="@dimen/dp_32">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/orderName"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="@string/ordePrice"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toStartOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="@string/reportRate"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/orderTime"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>