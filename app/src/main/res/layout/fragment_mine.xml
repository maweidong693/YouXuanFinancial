<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FF"
    tools:context=".main.mine.MineFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_228"
        android:background="@mipmap/bg_mine">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_68"
            android:layout_marginStart="16dp"
            android:layout_marginTop="95dp"
            android:src="@mipmap/ic_head"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/iv_header"
            app:layout_constraintStart_toEndOf="@+id/iv_header"
            app:layout_constraintTop_toTopOf="@+id/iv_header">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:drawablePadding="5dp"
                android:text="@string/phoneTest"
                android:textColor="@color/minePhoneColor"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header"
        android:layout_marginTop="-45dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mine_deal_detail"
            android:layout_width="match_parent"
            android:layout_height="84.5dp"
            android:background="@mipmap/ic_mine_item"
            android:drawableStart="@mipmap/ic_detail"
            android:drawableEnd="@mipmap/ic_mine_more"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_32"
            android:paddingEnd="@dimen/dp_31"
            android:text="@string/moneyDetail"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_mine_authentication"
            android:layout_width="match_parent"
            android:layout_height="84.5dp"
            android:layout_below="@id/tv_mine_deal_detail"
            android:layout_marginTop="-17.5dp"
            android:background="@mipmap/ic_mine_item"
            android:drawableStart="@mipmap/ic_authentication"
            android:drawableEnd="@mipmap/ic_mine_more"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_32"
            android:paddingEnd="@dimen/dp_31"
            android:text="@string/authentication"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_mine_bank_card"
            android:layout_width="match_parent"
            android:layout_height="84.5dp"
            android:layout_below="@id/tv_mine_authentication"
            android:layout_marginTop="-17.5dp"
            android:background="@mipmap/ic_mine_item"
            android:drawableStart="@mipmap/ic_bank_card"
            android:drawableEnd="@mipmap/ic_mine_more"
            android:drawablePadding="@dimen/dp_7"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_32"
            android:paddingEnd="@dimen/dp_31"
            android:text="@string/bankCard"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_14" />

        <Button
            android:id="@+id/bt_out_login"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/outLogin"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/dp_50"
            android:background="@drawable/bg_confirm" />

    </RelativeLayout>

</RelativeLayout>