<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/acBgColor"
    tools:context=".main.mine.authentication.AuthenticationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ab_add_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        app:elevation="@dimen/dp_0">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/authentication_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_30"
            android:minHeight="?attr/actionBarSize"
            android:navigationIcon="@mipmap/ic_back_black"
            app:navigationIcon="@mipmap/ic_back_black"
            tools:targetApi="lollipop">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="@string/authentication"
                android:textColor="@color/alwaysTextColor"
                android:textSize="@dimen/dp_19"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rl_id_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        android:layout_below="@id/ab_add_card"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/bg_authentication">

        <TextView
            android:id="@+id/tv_x_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_14"
            android:text="*"
            android:textColor="@color/xColor"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_upload_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_x_1"
            android:layout_toEndOf="@id/tv_x_1"
            android:text="上传身份证"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_14" />

        <ImageView
            android:id="@+id/iv_up_IDCard_front"
            android:layout_width="@dimen/dp_145"
            android:layout_height="@dimen/dp_98"
            android:layout_below="@id/tv_x_1"
            android:layout_alignStart="@id/tv_x_1"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@mipmap/bg_id_card_front" />

        <ImageView
            android:id="@+id/iv_up_IDCard_reverse"
            android:layout_width="@dimen/dp_145"
            android:layout_height="@dimen/dp_98"
            android:layout_below="@id/tv_x_1"
            android:layout_alignTop="@id/iv_up_IDCard_front"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_17"
            android:src="@mipmap/bg_id_card_reverse" />

        <TextView
            android:id="@+id/tv_check_front"
            style="@style/takePhotoTextStyle"
            android:layout_below="@id/iv_up_IDCard_front"
            android:layout_alignStart="@id/iv_up_IDCard_front"
            android:text="@string/takeFront" />

        <TextView
            android:id="@+id/tv_check_reverse"
            style="@style/takePhotoTextStyle"
            android:layout_below="@id/iv_up_IDCard_reverse"
            android:layout_alignStart="@id/iv_up_IDCard_reverse"
            android:text="@string/takeReverse" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/rl_id_card"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/bg_authentication">

        <TextView
            android:id="@+id/tv_x_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"
            android:text="*"
            android:textColor="@color/xColor"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_x_3"
            android:text="@string/name"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_14" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@null"
            android:gravity="end"
            android:hint="@string/pleaseInputName"
            android:textColor="@color/hintTextColor"
            android:textSize="@dimen/dp_14" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/rl_name"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/bg_authentication">

        <TextView
            android:id="@+id/tv_x_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"
            android:text="*"
            android:textColor="@color/xColor"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_x_4"
            android:text="@string/sex"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_14" />

        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/man"
                android:layout_marginEnd="@dimen/dp_5"
                android:textColor="@color/hintTextColor"
                android:textSize="@dimen/dp_14" />

            <RadioButton
                android:id="@+id/rb_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/woman"
                android:textColor="@color/hintTextColor"
                android:textSize="@dimen/dp_14" />

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_card_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/rl_sex"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/bg_authentication">

        <TextView
            android:id="@+id/tv_x_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"
            android:text="*"
            android:textColor="@color/xColor"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_x_5"
            android:text="@string/cardNumber"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_14" />

        <EditText
            android:id="@+id/et_card_number"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@null"
            android:gravity="end"
            android:hint="@string/pleaseInputCardNumber"
            android:textColor="@color/hintTextColor"
            android:textSize="@dimen/dp_14" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_authentication"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_39"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/bg_confirm"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_14" />

</RelativeLayout>