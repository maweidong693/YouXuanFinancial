<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/acBgColor"
    tools:context=".main.mine.bank.AddBankCardActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ab_add_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:background="@color/colorPrimary"
        app:elevation="@dimen/dp_0">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/add_bank_card_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_30"
            android:minHeight="?attr/actionBarSize"
            android:navigationIcon="@mipmap/ic_back_black"
            app:navigationIcon="@mipmap/ic_back_black"
            tools:targetApi="lollipop">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="@string/addBankCard"
                android:textColor="@color/alwaysTextColor"
                android:textSize="@dimen/dp_19"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rl_bank_card_user_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/ab_add_card"
        android:gravity="end"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/bg_authentication">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"
            android:text="@string/name"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_14" />

        <EditText
            android:id="@+id/et_bank_card_user_name"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@null"
            android:gravity="end"
            android:hint="@string/pleaseInputName"
            android:textColor="@color/hintTextColor"
            android:textSize="@dimen/dp_14" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bank_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/rl_bank_card_user_name"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/bg_authentication">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"
            android:text="@string/bankName"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_14" />

        <ImageView
            android:id="@+id/iv_bank_card_more"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_9"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:src="@mipmap/more" />

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_toStartOf="@id/iv_bank_card_more"
            android:gravity="center_vertical"
            android:textColor="@color/hintTextColor"
            android:textSize="@dimen/dp_14" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bank_card_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/rl_bank_name"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/bg_authentication">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"
            android:text="@string/bankCardNumber"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_14" />

        <EditText
            android:id="@+id/et_bank_card_number"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@null"
            android:gravity="end"
            android:hint="@string/pleaseInputBankCardNumber"
            android:textColor="@color/hintTextColor"
            android:textSize="@dimen/dp_14" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bank_card_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_219"
        android:layout_below="@id/rl_bank_card_number"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/bg_authentication">

        <TextView
            android:id="@+id/textview6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/addBankCard"
            android:textColor="@color/alwaysTextColor"
            android:textSize="@dimen/dp_14" />

        <ImageView
            android:id="@+id/iv_bank_card_pic"
            android:layout_width="@dimen/dp_221"
            android:layout_height="@dimen/dp_110"
            android:layout_below="@id/textview6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:src="@mipmap/bg_bank_card_pic" />

        <TextView
            android:id="@+id/tv_upload_bank_pic"
            android:layout_width="@dimen/dp_221"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@id/iv_bank_card_pic"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_upload_id_card"
            android:gravity="center"
            android:text="@string/uploadBankPic"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14" />


    </RelativeLayout>

    <Button
        android:id="@+id/bt_confirm_bank"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_39"
        android:layout_below="@id/rl_bank_card_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@drawable/bg_confirm"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_14" />

</RelativeLayout>