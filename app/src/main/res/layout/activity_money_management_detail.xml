<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".main.management.detail.MoneyManagementDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ab_money_product"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_205"
        android:background="@mipmap/bg_money_management_detail">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/product_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_25"
            android:minHeight="?attr/actionBarSize"
            android:navigationIcon="@mipmap/ic_back_white"
            app:navigationIcon="@mipmap/ic_back_white"
            tools:targetApi="lollipop">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="@string/testFont"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginBottom="32dp"
                android:text="@string/reportBack"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_money_product_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="126.36%"
                android:textColor="#ffffffff"
                android:textSize="36sp"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:text="@string/buyPrice"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/investTime"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <TextView
                android:id="@+id/tv_invest_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/test"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="@+id/tv_money_product_report"
                app:layout_constraintEnd_toEndOf="@+id/textView5" />

            <TextView
                android:id="@+id/tv_buy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="@string/test"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15"
                app:layout_constraintBottom_toBottomOf="@+id/tv_money_product_report"
                app:layout_constraintEnd_toEndOf="@+id/textView3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tv_product_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ab_money_product"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_28"
        android:text="@string/moneyProductMessage"
        android:textColor="@color/alwaysTextColor"
        android:textSize="@dimen/dp_15" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_hint"
        android:layout_marginStart="@dimen/dp_17"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="@dimen/dp_17"
        android:background="@drawable/bg_money_product_detail">

        <TextView
            android:id="@+id/tv_hint_name"
            style="@style/productHint"
            android:layout_marginStart="@dimen/dp_17"
            android:layout_marginTop="16dp"
            android:text="@string/productName"
            app:layout_constraintBottom_toTopOf="@+id/tv_hint_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_produce_name"
            style="@style/productText"
            android:layout_marginEnd="17dp"
            android:text="@string/testFont"
            app:layout_constraintBottom_toBottomOf="@id/tv_hint_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_hint_name" />

        <TextView
            android:id="@+id/tv_hint_type"
            style="@style/productHint"
            android:layout_marginTop="16dp"
            android:text="@string/productType"
            app:layout_constraintBottom_toTopOf="@+id/tv_hint_time"
            app:layout_constraintStart_toStartOf="@id/tv_hint_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_hint_name" />

        <TextView
            android:id="@+id/tv_produce_type"
            style="@style/productText"
            android:text="@string/testFont"
            app:layout_constraintBottom_toBottomOf="@id/tv_hint_type"
            app:layout_constraintEnd_toEndOf="@id/tv_produce_name"
            app:layout_constraintTop_toTopOf="@id/tv_hint_type" />

        <TextView
            android:id="@+id/tv_hint_risk"
            style="@style/productHint"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/productRisk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_hint_time"
            app:layout_constraintTop_toBottomOf="@+id/tv_hint_time" />

        <TextView
            android:id="@+id/tv_produce_risk"
            style="@style/productText"
            android:text="@string/testFont"
            app:layout_constraintBottom_toBottomOf="@id/tv_hint_risk"
            app:layout_constraintEnd_toEndOf="@id/tv_produce_time"
            app:layout_constraintTop_toTopOf="@id/tv_hint_risk" />

        <TextView
            android:id="@+id/tv_hint_time"
            style="@style/productHint"
            android:layout_marginTop="16dp"
            android:text="@string/buyTime"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/tv_hint_type"
            app:layout_constraintTop_toBottomOf="@+id/tv_hint_type" />

        <TextView
            android:id="@+id/tv_produce_time"
            style="@style/productText"
            android:text="@string/testFont"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_hint_time"
            app:layout_constraintEnd_toEndOf="@id/tv_produce_type"
            app:layout_constraintTop_toTopOf="@id/tv_hint_time" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/bt_buy_product"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/bg_confirm"
        android:text="@string/buy"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_15" />

</RelativeLayout>